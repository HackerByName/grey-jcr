- var title = 'Home'

doctype html
html
	head
		include ./head.jade
	body
		div(class='ui container')
			include ./header.jade
			include ./menu.jade
			h2 Blog
			h3 Edit a Blog Post
			form(class="ui edit form" method="POST" action="/admin/blog/"+post.id+"/edit")
				div(class="field")
					label Title
					input(type="text" name="title" value=post.title)
				div(class="field")
					label Message
					textarea(rows="5" name="message" id="editor1")=post.message
				button(type="submit" class="ui submit button") 
					i(class="save icon")
					| Save

		script.
			CKEDITOR.replace( 'editor1' );