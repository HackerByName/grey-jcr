- var title = 'Home'

doctype html
html
	head
		include ./head.jade
	body
		div(class='ui container')
			include ./header.jade
			- var current="events";
			include ./menu.jade
			h2 Events
			div(class="ui vertical segment")
				h3 Edit an event - 
					a(href="/admin/events") Back
				form(class="ui edit form" method="POST" action="/admin/events/"+event.id+"/edit" enctype="multipart/form-data")
					div(class="field")
						label Name
						input(type="text" name="name" value=event.name)
					div(class="field")
						label Description
						textarea(rows="5" name="description" id="editor1")=event.description
					div(class="field")
						label Promo Image
						input(type="file" name="image")
					div(class="two fields")
						div(class="field")
							label Date
							input(type="text" name="date" value=event.timestamp.getDate() + "-"+(event.timestamp.getMonth() + 1)+"-"+event.timestamp.getFullYear())
						div(class="field")
							label Time
							input(type="text" name="time" value=("0"+event.timestamp.getHours()).slice(-2)+":"+("0"+event.timestamp.getMinutes()).slice(-2))
					div(class="field")
						label Assign Tickets
						select(class="ui fluid search dropdown" multiple="" name="tickets")
							each ticket in tickets
								if (ticket.selected)
									option(value=ticket.id selected)= ticket.name
								else
									option(value=ticket.id)= ticket.name
						script.
							$('.search.dropdown').dropdown();
					button(type="submit" class="ui submit button")
						i(class="save icon")
						| Save
					div(class="ui error message")

				script.
					$('.form').form({
						fields: {
							name: 'empty',
							date: 'regExp[/(0?[1-9]|[12][0-9]|3[01])[-](0?[1-9]|1[0-2])[-](19|20|21)[0-9]{2}/ig]',
							time: 'regExp[/([01]?[0-9]|2[0-3]):[0-5][0-9]/ig]'
						}
					});

		script.
			CKEDITOR.replace( 'editor1' );