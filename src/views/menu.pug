div(class='ui stackable red inverted menu')
	a(class=(current=="home")?'active item':'item' href='/') Home
	div(class="ui floating dropdown item") The JCR
		i(class="dropdown icon")
		div(id="jcr-dropdown" class="menu")
			a(class="item" href="/jcr") About
			a(class="item" href="/support") Support
			a(class="item" href="/facilities") Facilities
	a(class=(current=="mcr")?'active item':'item' href='/mcr') The MCR
	a(class=(current=="sportsandsocs")?'active item':'item' href='/sportsandsocs') Sports & Societies
	a(class=(current=="events")?'active item':'item' href='/events') Events
	a(class=(current=="tech")?'active item':'item' href='/tech') Tech
	a(class='item' href='/welfare' style='background-color: #42bff4;') Welfare
	a(class='item' href='/reps' style='background-color: #3dbb38;') Representatives
	a(class='item' href='https://greatideas.hubbub.net/' style='background-color: #FBBD08;') Crowdfunding

	div(class="right menu")
		div(class="ui right aligned category search item")
			div(class="ui inverted transparent icon input")
				input(class="prompt" type="text" placeholder="Search...")
				i(class="search icon")
		div(class="results")

		script.
			$('.ui.dropdown').dropdown();

			$('.ui.search').search({
				apiSettings: {
					url: '/api/search?q={query}',
					onResponse: function(response) {
						$.each(response.results, function (key, value) {
							response.results[key].results.splice(5)
						})
						return response;
					}
				},
				type: 'category',
			});
